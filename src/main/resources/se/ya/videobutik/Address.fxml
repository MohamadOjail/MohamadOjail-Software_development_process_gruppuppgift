<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" stylesheets="@SectionStyle.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.ya.videobutik.ui.controller.AddressController">
   <children>
      <VBox spacing="20.0">
         <children>
            <Label text="Add address" />
            <HBox spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Address" />
                        <TextField fx:id="tf_add_address" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="District" />
                        <TextField fx:id="tf_add_district" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Postal Code" />
                        <TextField fx:id="tf_add_postal_code" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Country" />
                        <ComboBox fx:id="cb_add_country" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="City" />
                        <ComboBox fx:id="cb_add_city" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <Button fx:id="btn_add" mnemonicParsing="false" text="Lägg till" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Separator prefWidth="200.0" />
      <VBox spacing="20.0">
         <children>
            <Label text="Select address" />
            <HBox alignment="BOTTOM_LEFT" spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Address Id" />
                        <TextField fx:id="tf_address_id" />
                     </children>
                  </VBox>
                  <Button fx:id="btn_select" mnemonicParsing="false" prefHeight="37.0" prefWidth="129.0" text="Välj" />
                  <Button fx:id="btn_delete" disable="true" mnemonicParsing="false" prefHeight="37.0" prefWidth="129.0" text="radera" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Separator prefWidth="200.0" />
      <VBox spacing="20.0">
         <children>
            <Label text="Edit address" />
            <HBox spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Address" />
                        <TextField fx:id="tf_edit_address" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="District" />
                        <TextField fx:id="tf_edit_district" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Postal Code" />
                        <TextField fx:id="tf_edit_postal_code" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Country" />
                        <ComboBox fx:id="cb_edit_country" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="City" />
                        <ComboBox fx:id="cb_edit_city" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <Button fx:id="btn_edit" disable="true" mnemonicParsing="false" text="Redigera" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Separator prefWidth="200.0" />
      <ListView fx:id="lv_address" prefHeight="200.0" prefWidth="200.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
