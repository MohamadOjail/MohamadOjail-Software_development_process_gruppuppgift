<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" stylesheets="@SectionStyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.ya.videobutik.ui.controller.CustomerController">
   <children>
      <HBox spacing="40.0">
         <children>
            <VBox spacing="30.0">
               <children>
                  <Label id="title" text="Add new customer" />
                  <VBox>
                     <children>
                        <Label text="First Name" />
                        <TextField fx:id="tf_add_first_name" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Last Name" />
                        <TextField fx:id="tf_add_last_name" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="E-mail" />
                        <TextField fx:id="tf_add_email" />
                     </children>
                  </VBox>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="Customer address" textFill="#e88709" />
                        <VBox>
                           <children>
                              <Label text="Address" />
                              <TextField fx:id="tf_add_address" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="District" />
                              <TextField fx:id="tf_add_district" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="City" />
                              <ComboBox fx:id="cb_add_city" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Postal code" />
                              <TextField fx:id="tf_add_postal_code" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Phone" />
                              <TextField fx:id="tf_add_phone" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <CheckBox fx:id="checkb_add_active" mnemonicParsing="false" text="Active" />
                  <Button id="section_btn" fx:id="btn_add_costumer" mnemonicParsing="false" text="Add Costumer" />
               </children>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox>
               <children>
                  <VBox spacing="30.0">
                     <children>
                        <Label id="title" text="Select / Find customer" />
                        <VBox>
                           <children>
                              <Label text="Last Name" />
                              <TextField fx:id="tf_find_last_name" />
                           </children>
                        </VBox>
                        <TableView fx:id="tv_customers" prefHeight="571.0">
                          <columns>
                            <TableColumn minWidth="80.0" text="id" />
                            <TableColumn minWidth="150.0" prefWidth="150.0" text="First Name" />
                              <TableColumn minWidth="150.0" prefWidth="150.0" text="Last Name" />
                              <TableColumn minWidth="150.0" prefWidth="150.0" text="Last Name" />
                          </columns>
                        </TableView>
                        <Button id="section_btn" fx:id="btn_delete_costumer" mnemonicParsing="false" prefHeight="37.0" prefWidth="381.0" text="Delete Customer" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox spacing="30.0">
               <children>
                  <Label id="title" text="Update customer info" />
                  <VBox>
                     <children>
                        <Label text="First Name" />
                        <TextField fx:id="tf_edit_first_name" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Last Name" />
                        <TextField fx:id="tf_edit_last_name" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="E-mail" />
                        <TextField fx:id="tf_edit_email" />
                     </children>
                  </VBox>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="Customer address" textFill="#e88709" />
                        <VBox>
                           <children>
                              <Label text="Address" />
                              <TextField fx:id="tf_edit_address" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="District" />
                              <TextField fx:id="tf_edit_district" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="City" />
                              <ComboBox fx:id="cb_edit_city" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Postal code" />
                              <TextField fx:id="tf_edit_postal_code" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Phone" />
                              <TextField fx:id="tf_edit_phone" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <CheckBox fx:id="checkb_edit_active" mnemonicParsing="false" text="Active" />
                  <Button id="section_btn" fx:id="btn_edit_costumer" mnemonicParsing="false" text="Update Customer Info" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</VBox>
