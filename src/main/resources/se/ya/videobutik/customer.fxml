<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.ya.videobutik.ui.controller.CustomerController">
   <children>
      <HBox spacing="20.0">
         <children>
            <VBox>
               <children>
                  <Label text="Förnamn" />
                  <TextField fx:id="tf_firstname" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Efternamn" />
                  <TextField fx:id="tf_lastname" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="E-post" />
                  <TextField fx:id="tf_email" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <HBox spacing="20.0">
         <children>
            <VBox>
               <children>
                  <Label text="Adress" />
                  <ComboBox fx:id="cb_address" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Aktiv" />
                  <ComboBox fx:id="cb_active" prefWidth="150.0" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <HBox spacing="20.0">
         <children>
            <Button fx:id="btn_add" mnemonicParsing="false" text="Lägg till" />
            <Button fx:id="btn_select" mnemonicParsing="false" text="Välj" />
            <Button fx:id="btn_delete" mnemonicParsing="false" text="Radera" />
            <Button fx:id="btn_update" mnemonicParsing="false" text="Uppdatera" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <ListView fx:id="lv_customers" prefHeight="200.0" prefWidth="200.0" />
   </children>
</VBox>
